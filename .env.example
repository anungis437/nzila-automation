# ============================================================
# Nzila OS — Environment Variables Template
#
# Copy to .env and fill in real values.
# .env is gitignored and must NEVER be committed.
# ============================================================

# ----- Database -----
# Local dev: postgresql://nzila:nzila_dev@localhost:5433/nzila_automation
# Staging/prod: set via Azure App Service / GitHub Actions secret DATABASE_URL
DATABASE_URL=

# ----- Clerk Authentication -----
# Get from https://dashboard.clerk.com → API Keys
# NEXT_PUBLIC_ prefix = safe to expose in browser bundles
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_
CLERK_SECRET_KEY=sk_test_

# Clerk redirect paths (defaults shown — override per-app if needed)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# ----- Azure Storage (blob package) -----
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_NAME=

# ----- App URLs -----
NEXT_PUBLIC_CONSOLE_URL=https://console.nzila.app

# ----- OpenAI -----
OPENAI_API_KEY=
OPENAI_PROJECT=

# ----- AI Control Plane -----
AI_DEFAULT_PROVIDER=openai          # azure_openai | openai | anthropic
OPENAI_MODEL_TEXT=gpt-4o
OPENAI_MODEL_EMBEDDINGS=text-embedding-3-small
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2024-06-01
AZURE_OPENAI_DEPLOYMENT_TEXT=
AZURE_OPENAI_DEPLOYMENT_EMBEDDINGS=
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_TEXT=claude-sonnet-4-6
AI_EMBEDDINGS_PROVIDER=openai       # azure_openai | openai

# ----- Intuit / QuickBooks Online -----
# Get from https://developer.intuit.com → My Apps → your app → Keys & OAuth
INTUIT_APP_ID=
INTUIT_CLIENT_ID=
INTUIT_CLIENT_SECRET=
INTUIT_ENVIRONMENT=sandbox          # sandbox | production
INTUIT_REDIRECT_URI=http://localhost:3000/api/auth/qbo/callback
