{
  "extends": "@nzila/config/tsconfig/nextjs",
  "compilerOptions": {
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "paths": {
      "@/*": ["./*"],
      "@nzila/db": ["../../packages/db/src"],
      "@nzila/ui": ["../../packages/ui/src"],
      "@nzila/os-core": ["../../packages/os-core/src"],
      "@nzila/os-core/*": ["../../packages/os-core/src/*"],
      "@nzila/commerce-core": ["../../packages/commerce-core/src"],
      "@nzila/commerce-services": ["../../packages/commerce-services/src"],
      "@nzila/commerce-audit": ["../../packages/commerce-audit/src"],
      "@nzila/pricing-engine": ["../../packages/pricing-engine/src"],
      "@nzila/shop-quoter": ["../../packages/shop-quoter/src/index.ts"],
      "@nzila/shop-quoter/*": ["../../packages/shop-quoter/src/*"],
      "@nzila/blob": ["../../packages/blob/src"],
      "@nzila/ai-sdk": ["../../packages/ai-sdk/src"],
      "@nzila/ml-sdk": ["../../packages/ml-sdk/src"],
      "@nzila/commerce-observability": ["../../packages/commerce-observability/src"],
      "@nzila/commerce-state": ["../../packages/commerce-state/src"],
      "@nzila/commerce-governance": ["../../packages/commerce-governance/src"],
      "@nzila/commerce-events": ["../../packages/commerce-events/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", ".turbo", "dist"]
}
