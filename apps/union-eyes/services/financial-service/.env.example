# Financial Service Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3007
SERVICE_NAME=financial-service

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:your_password@db.your_project.supabase.co:5432/postgres
SUPABASE_URL=https://xryvcdbmljxlsrfanvrv.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Authentication (Clerk)
CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here
CLERK_JWT_VERIFICATION_KEY=your_jwt_verification_key_here

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# CORS Configuration (Security Hardened - Feb 2026)
# Comma-separated list of allowed origins. Never use wildcard (*) in production.
# Development: localhost origins are automatically allowed  
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Calculation Engine
LATE_FEE_GRACE_PERIOD_DAYS=7
DEFAULT_LATE_FEE_PERCENTAGE=5.0
DEFAULT_LATE_FEE_FLAT_AMOUNT=10.00

# Email Configuration (for receipts)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key_here
EMAIL_FROM=noreply@unionclaims.com

# Redis (for caching and rate limiting - optional)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_STRIPE_PAYMENTS=true
ENABLE_NFC_CHECKIN=true
ENABLE_GPS_VERIFICATION=true
ENABLE_AI_PREDICTIONS=false
