{
  "extends": "../../packages/config/tsconfig.nextjs.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "paths": {
      "@/*": ["./*"],
      "@nzila/ui": ["../../packages/ui/src"],
      "@nzila/db": ["../../packages/db/src/index.ts"],
      "@nzila/db/schema": ["../../packages/db/src/schema/index.ts"],
      "@nzila/db/client": ["../../packages/db/src/client.ts"],
      "@nzila/os-core": ["../../packages/os-core/src"],
      "@nzila/os-core/*": ["../../packages/os-core/src/*"],
      "@nzila/blob": ["../../packages/blob/src"],
      "@nzila/ml-sdk": ["../../packages/ml-sdk/src"],
      "@nzila/ml-sdk/*": ["../../packages/ml-sdk/src/*"],
      "@nzila/payments-stripe": ["../../packages/payments-stripe/src"],
      "@nzila/ai-sdk": ["../../packages/ai-sdk/src"],
      "@nzila/commerce-observability": ["../../packages/commerce-observability/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", ".turbo", "dist"]
}
